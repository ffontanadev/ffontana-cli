{
  "name": "ffontana-cli",
  "version": "0.2.1-snapshot",
  "description": "A Swiss Army knife CLI for modern frontend development (React, Next.js, Lit)",
  "author": "ffontana.dev",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ff": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "link:local": "npm run build && npm link"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "prompts": "^2.4.2",
    "zod": "^3.23.8",
    "fs-extra": "^11.2.0",
    "execa": "^9.4.0",
    "picocolors": "^1.1.1",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/prompts": "^2.4.9",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "@vitest/ui": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "frontend",
    "react",
    "nextjs",
    "lit",
    "generator",
    "scaffold",
    "automation",
    "developer-tools"
  ]
}
